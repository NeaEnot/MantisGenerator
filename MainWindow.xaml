<Window x:Class="MantisGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MantisGenerator"
        mc:Ignorable="d"
        Title="MantisGenerator" Height="396" Width="514">
    <Grid>
        <TreeView Name="treeView" Margin="0,0,0,52" Loaded="treeView_Loaded" MouseDoubleClick="treeView_MouseDoubleClick">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Button Name="buttonAdd" Content="Создать" HorizontalAlignment="Left" Margin="10,0,0,10" Width="98" Click="buttonAdd_Click" Height="20" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
